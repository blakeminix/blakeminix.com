---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Blake Minix">
	<main>
		<h1><span class="text-gradient">Blake Minix</span></h1>
		<p class="instructions">
			Hi, I'm Blake. Welcome to my portfolio website! It's currently a work in progress.
			 In the meantime, check out the links below!
		</p>
		<ul role="list" class="link-card-grid">
			<Card
				href="https://www.linkedin.com/in/blakeminix/"
				title="LinkedIn"
				body="Connect with me on LinkedIn!"
			/>
			<Card
				href="https://github.com/blakeminix"
				title="GitHub"
				body="Check out my open-sourced projects."
			/>
			<Card
				href="https://content-management-system-32ddcdcefaf8.herokuapp.com/"
				title="Content Management System"
				body="Check out my deployed content management system."
			/>
			<Card
				href="https://github.com/blakeminix/Content-Management-System"
				title="Content Management System Repository"
				body="Check out the repository of my content management system."
			/>
		</ul>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
