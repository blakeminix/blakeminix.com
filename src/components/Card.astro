---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<a href={href} target="_blank" rel="noopener noreferrer" class="block p-6 max-w-sm bg-gray-800 rounded-lg border border-gray-700 transition duration-300 hover:bg-gradient-to-r hover:from-teal-400/20 hover:to-blue-500/20">
	<h3 class="mb-2 text-2xl font-bold tracking-tight text-white">{title}</h3>
	<p class="font-normal text-gray-400">{body}</p>
</a>
